<Window x:Class="Baybakov_Glazki.ChangePri"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baybakov_Glazki"
        mc:Ignorable="d"
        Title="ChangePri" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Изменение приоритета" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>

        <TextBox Name="maxPrTB" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Width="150"/>

        <Button Name="ApplyMax" Content="Изменить" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Width="150" Click="ApplyMax_Click"/>
        
    </Grid>
</Window>
